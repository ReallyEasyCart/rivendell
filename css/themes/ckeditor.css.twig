
{# This css file is only loaded by CKEditor.
    CKEditor loads all other css plus this file for styling so you can use this file to tweak changes #}

/*
    Better box sizing by default on all elements
    http://css-tricks.com/international-box-sizing-awareness-day/
*/
*, *:before, *:after {
    /* Chrome 9-, Safari 5-, iOS 4.2-, Android 3-, Blackberry 7- */
    -webkit-box-sizing: border-box;

    /* Firefox (desktop or Android) 28- */
    -moz-box-sizing: border-box;

    /* Firefox 29+, IE 8+, Chrome 10+, Safari 5.1+, Opera 9.5+, iOS 5+, Opera Mini Anything, Blackberry 10+, Android 4+ */
    box-sizing: border-box;
}

body {
    padding: 0 20px;
    color: #000;
    background-color: #FFF;
}

/* display images inline to match style on site */
img {
    display: inline-block;
    max-width: 100%;
    height: auto;
}

